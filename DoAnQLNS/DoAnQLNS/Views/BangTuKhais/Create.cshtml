@model DoAnQLNS.Models.BangTuKhai
@{
    Layout = null;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <h4 class="header green lighter bigger">
                <i class="icon-edit bigger-150"></i>
                Thêm mới tự khai
            </h4>
            @Html.ValidationSummary(true)
            @*@Html.HiddenFor(model => model.IDTuKhai)*@
            <div class="space-6"></div>
            <div class="form-group">
                
                @Html.LabelFor(model => model.IDNhanVien, "Tên Nhân Viên", new { @class = "text-info" })
                <div class="col-sm-9">
                    @Html.DropDownList("IDNhanVien", String.Empty)
                    @Html.ValidationMessageFor(model => model.IDNhanVien)
                </div>
            </div>
            <div class="form-group">
                <label class="text-info">Từ ngày: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.TuNgay, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.TuNgay)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="text-info">Đến ngày: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.DenNgay, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.DenNgay)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="text-info">Nội dung: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.NoiDung, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.NoiDung)
                    </div>
                </div>
            </div>
        </div>
    </div>            <!-- /modal-body -->
    <div class="modal-footer">
        <button type="submit" class="btn btn-success"> Lưu</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true"> Đóng</button>
    </div>
}


