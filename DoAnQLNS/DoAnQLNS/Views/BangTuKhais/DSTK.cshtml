@model IEnumerable<DoAnQLNS.Models.BangTuKhai>
@{
    ViewBag.Title = "DANH SÁCH TỰ KHAI";
}

<div class="row-fluid">
    @using (Html.BeginForm("BangTuKhai", null, FormMethod.Get))
    {
        <div class="span12">
            <div class="row-fluid">
                <a class="btn btn-primary" style="margin-bottom:5px" data-modal="" href="/BangTuKhais/Create" id="btnCreate">Tạo mới</a>
            </div>
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ID Tự Khai</th>
                        <th>Tên Nhân Viên</th>
                        <th>Từ Ngày</th>
                        <th>Dến Ngày</th>
                        <th>Nội Dung</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IDTuKhai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NhanVien.HoTen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TuNgay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DenNgay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoiDung)
                            </td>

                            <td>
                                <div class="hidden-phone visible-desktop action-buttons">
                                    @Html.Raw("<a class='green'  data-modal='' href='/BangTuKhais/Edit/" + item.IDTuKhai + "' id='" + item.IDTuKhai + "' title='Sửa thông tin'><i class='icon-pencil bigger-130'></i> </a>")
                                    @Html.Raw("<a class='red'  data-modal='' href='/BangTuKhais/Delete/" + item.IDTuKhai + "' id='" + item.IDTuKhai + "' title='Xóa thông tin'><i class='icon-trash bigger-130'></i> </a>")
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div><!--/span-->
    }
</div>
@section scripts{
    @System.Web.Optimization.Scripts.Render("~/assets/js/phones.js")
}
<!-- modal placeholder-->
<div id='myModal' class='modal fade'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
            </div>
        </div>
    </div>
</div>
