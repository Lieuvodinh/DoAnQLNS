@model DoAnQLNS.Models.ChucVu
@{
    Layout = null;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IDChucVu)
    <div class="modal-body">
        <div class="form-horizontal">
            <h4 class="header green lighter bigger">
                <i class="icon-edit bigger-150"></i>
                Chỉnh sửa đối tượng
            </h4>

            <div class="space-6"></div>

            @Html.HiddenFor(model => model.IDChucVu)

            <div class="form-group">
                <label class="text-info">Tên chức vụ: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.TenChucVu, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.TenChucVu)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="text-info">Mô tả: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.MoTa, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.MoTa)
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label class="text-info">Phụ cấp: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.PhuCap, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.PhuCap)
                    </div>
                </div>
            </div>

        </div>

    </div>            <!-- /modal-body -->
    <div class="modal-footer">

        <button type="submit" class="btn btn-success"> Lưu</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true"> Đóng</button>
    </div>
}


