@model IEnumerable<DoAnQLNS.Models.NhanVien_PhongBan>
@{
    ViewBag.Title = "DANH SÁCH NHÂN VIÊN PHÒNG BAN";
}
<div class="row-fluid">
    @using (Html.BeginForm("NhanVienPhongBan", null, FormMethod.Get))
    {
        <div class="span12">
            <div class="row-fluid">
                <a class="btn btn-primary" style="margin-bottom:5px" data-modal="" href="/NhanVien_PhongBan/Create" id="btnCreate">Tạo mới</a>
            </div>

            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ID Nhân Viên</th>
                        <th>Tên Nhân Viên</th>
                        <th>Tên Phòng Ban</th>
                        <th>Ngày Bắt Đầu</th>
                        <th>Ngày Kết Thúc</th>
                        <th>Quyết Định Số</th>
                        <th>Tình Trạng</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.HoDongLaoDong.IDNhanVien
                            </td>
                            <td>
                                @item.HoDongLaoDong.NhanVien.HoTen
                            </td>
                            <td>
                                @item.PhongBan.TenPhongBan
                            </td>
                            <td>
                                @item.HoDongLaoDong.NgayHieuLuc
                            </td>
                            <td>
                                @item.HoDongLaoDong.NgayHetHan
                            </td>
                            <td>
                                @item.HoDongLaoDong.QuyetDinhSo
                            </td>
                            <td>
                                @item.HoDongLaoDong.TinhTrang
                            </td>
                            <td>
                                <div class="hidden-phone visible-desktop action-buttons">
                                    @Html.Raw("<a class='green'  data-modal='' href='/NhanVien_PhongBan/Edit/" + item.IDNVPB + "' id='" + item.IDNVPB + "' title='Sửa thông tin'><i class='icon-pencil bigger-130'></i> </a>")
                                    @Html.Raw("<a class='red'  data-modal='' href='/NhanVien_PhongBan/Delete/" + item.IDNVPB + "' id='" + item.IDNVPB + "' title='Xóa thông tin'><i class='icon-trash bigger-130'></i> </a>")

                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div><!--/span-->
    }
</div>
@section scripts{
    @System.Web.Optimization.Scripts.Render("~/assets/js/phones.js")
}
<!-- modal placeholder-->
<div id='myModal' class='modal fade'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
            </div>
        </div>
    </div>
</div>

