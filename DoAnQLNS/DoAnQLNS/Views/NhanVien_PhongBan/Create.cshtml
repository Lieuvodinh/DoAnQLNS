@model DoAnQLNS.Models.NhanVien_PhongBan
@{
    Layout = null;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <h4 class="header green lighter bigger">
                <i class="icon-edit bigger-150"></i>
                Thêm mới nhân viên phòng ban
            </h4>
            <div class="space-6"></div>

            <div class="form-group">
                <label class="text-info">ID Nhân Viên: </label>
                <div class="col-sm-9">
                    @Html.DropDownList("IDHopDong", String.Empty)
                    <div>
                        @Html.ValidationMessageFor(m => m.HoDongLaoDong.IDNhanVien)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="text-info">Tên Phòng Ban: </label>
                <div class="col-sm-9">
                    @Html.DropDownList("IDPhongBan", String.Empty)
                    <div>
                        @Html.ValidationMessageFor(m => m.PhongBan.TenPhongBan)
                    </div>
                </div>
            </div>
        </div>
    </div>            <!-- /modal-body -->
    <div class="modal-footer">
        <button type="submit" class="btn btn-success"> Lưu</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true"> Đóng</button>
    </div>
}