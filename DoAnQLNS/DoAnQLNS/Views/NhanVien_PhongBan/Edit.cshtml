@model DoAnQLNS.Models.NhanVien_PhongBan
@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IDNVPB)
    <div class="modal-body">
        <div class="form-horizontal">
            <h4 class="header green lighter bigger">
                <i class="icon-edit bigger-150"></i>
                Chỉnh sửa nhân viên kĩ năng
            </h4>
            <div class="space-6"></div>
            @Html.HiddenFor(model => model.IDHopDong)
            <div class="form-group">
                <label class="text-info">ID Nhân Viên: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.HoDongLaoDong.IDNhanVien, new { @class = "alert alert-error", @disabled = "disabled" })
                    <div>
                        @Html.ValidationMessageFor(m => m.HoDongLaoDong.IDNhanVien)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="text-info">Tên Nhân Viên: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.HoDongLaoDong.NhanVien.HoTen, new { @class = "alert alert-error", @disabled = "disabled" })
                    <div>
                        @Html.ValidationMessageFor(m => m.HoDongLaoDong.NhanVien.HoTen)
                    </div>
                </div>
            </div>
            @Html.HiddenFor(model => model.IDPhongBan)
            <div class="form-group">
                <label class="text-info">Phòng Ban: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.PhongBan.TenPhongBan, new { @class = "alert alert-error", @disabled = "disabled" })
                    <div>
                        @Html.ValidationMessageFor(m => m.PhongBan.TenPhongBan)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="text-info">Ngày Bắt Đầu: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.HoDongLaoDong.NgayHieuLuc)
                    <div>
                        @Html.ValidationMessageFor(m => m.HoDongLaoDong.NgayHieuLuc)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="text-info">Ngày Kết Thúc: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.HoDongLaoDong.NgayHetHan)
                    <div>
                        @Html.ValidationMessageFor(m => m.HoDongLaoDong.NgayHetHan)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="text-info">Quyết Định Số: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.HoDongLaoDong.QuyetDinhSo)
                    <div>
                        @Html.ValidationMessageFor(m => m.HoDongLaoDong.QuyetDinhSo)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="text-info">Tình Trạng: </label>
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.HoDongLaoDong.TinhTrang)
                    <div>
                        @Html.ValidationMessageFor(m => m.HoDongLaoDong.TinhTrang)
                    </div>
                </div>
            </div>
        </div>
    </div>            <!-- /modal-body -->
    <div class="modal-footer">
        <button type="submit" class="btn btn-success"> Lưu</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true"> Đóng</button>
    </div>
}



