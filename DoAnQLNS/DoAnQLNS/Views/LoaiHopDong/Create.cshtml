@model DoAnQLNS.Models.LoaiHopDong

@{
    ViewBag.Title = "Create";
}

<h2>TẠO MỚI LOẠI HỢP ĐỒNG</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.TenLoai, "Tên Loại Hợp Đồng", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLoai)
                @Html.ValidationMessageFor(model => model.TenLoai)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo mới" class="btn btn-default mybuttonSubmit" />
            </div>
        </div>
    </div>
}

<div class="col-md-offset-2 col-md-10">
    <button class="mybuttonBack">@Html.ActionLink("Trở về lại trang danh sách loại hợp đồng", "DSLHD")</button>
</div>
