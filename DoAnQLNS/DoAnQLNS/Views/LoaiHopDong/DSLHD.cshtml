@model IEnumerable<DoAnQLNS.Models.LoaiHopDong>

@{
    ViewBag.Title = "Index";
}



<div class="row-fluid">
    <div class="span12">
        <p>
            @Html.ActionLink("Thêm mới", "Create")
        </p>
        <table id="sample-table-1" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Mã Loại Hợp Đồng</th>
                    <th>Tên Loại Hợp Đồng</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.IDLoaiHopDong
                        </td>
                        <td>
                            @item.TenLoai
                        </td>
                        
                        <td>
                            <div class="hidden-phone visible-desktop btn-group">
                                <button class="btn btn-mini btn-info">
                                    <i class="icon-edit bigger-120">@Html.ActionLink("Sửa", "Edit", new { id = item.IDLoaiHopDong })</i>
                                </button>
                                <button class="btn btn-mini btn-danger">
                                    <i class="icon-trash bigger-120">@Html.ActionLink("Xóa", "Delete", new { id = item.IDLoaiHopDong})</i>
                                </button>

                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div><!--/span-->
</div>
