@model IEnumerable<DoAnQLNS.Models.NhanVien_KyNang>

@{
    ViewBag.Title = "DANH SÁCH KỸ NĂNG NHÂN VIÊN";
}
<div class="row-fluid">
    @using (Html.BeginForm("kynangnhanvien", null, FormMethod.Get))
    {
        <div class="span12">
            <div class="row-fluid">
                <a class="btn btn-primary" style="margin-bottom:5px" data-modal="" href="/NhanVien_KyNang/Create" id="bntCreate">Tạo mới</a>
            </div>
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ID Nhân Viên</th>
                        <th>Nhân Viên</th>
                        <th>Kỹ Năng</th>
                        <th>Năm Kinh Nghiệm</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.IDNhanVien
                            </td>
                            <td>
                                @item.NhanVien.HoTen
                            </td>
                            <td>
                                @item.KyNang.TenKyNang
                            </td>
                            <td>
                                @item.SoNamKinhNghiem
                            </td>
                            <td>
                                <div class="hidden-phone visible-desktop action-buttons">
                                    @Html.Raw("<a class='green'  data-modal='' href='/NhanVien_KyNang/Edit/" +item.IDNhanVien + "' id='" + item.IDNhanVien + "' title='Sửa thông tin'><i class='icon-pencil bigger-130'></i> </a>")
                                    @Html.Raw("<a class='red'  data-modal='' href='/NhanVien_KyNang/Delete/" + item.IDNhanVien + "' id='" + item.IDNhanVien + "' title='Xóa thông tin'><i class='icon-trash bigger-130'></i> </a>")

                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div><!--/span-->
    }
</div>
@section scripts{
    @System.Web.Optimization.Scripts.Render("~/assets/js/phones.js")
}
<!-- modal placeholder-->
<div id='myModal' class='modal fade'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
            </div>
        </div>
    </div>
</div>