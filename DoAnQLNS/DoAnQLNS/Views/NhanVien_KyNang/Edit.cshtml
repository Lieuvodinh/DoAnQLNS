@model DoAnQLNS.Models.NhanVien_KyNang
@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IDNVKN)
    <div class="modal-body">
        <div class="form-horizontal">
            <h4 class="header green lighter bigger">
                <i class="icon-edit bigger-150"></i>
                Chỉnh sửa nhân viên kĩ năng
            </h4>
            <div class="space-6"></div>
            @Html.HiddenFor(model => model.IDNhanVien)
            <div class="form-group">
                <label class="text-info">Nhân Viên: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.NhanVien.HoTen, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.NhanVien.HoTen)
                    </div>
                </div>
            </div>
            @Html.HiddenFor(model => model.IDKyNang)
            <div class="form-group">
                <label class="text-info">Kỹ Năng: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.KyNang.TenKyNang, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.KyNang.TenKyNang)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="text-info">Năm Kinh Nghiệm: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.SoNamKinhNghiem, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.SoNamKinhNghiem)
                    </div>
                </div>
            </div>
        </div>
    </div>            <!-- /modal-body -->
    <div class="modal-footer">
        <button type="submit" class="btn btn-success"> Lưu</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true"> Đóng</button>
    </div>
}




