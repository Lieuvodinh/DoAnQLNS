@model DoAnQLNS.Models.DangNhap
@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <h4 class="header green lighter bigger">
                <i class="icon-edit bigger-150"></i>
                Sửa tên đăng nhập
            </h4>

            <div class="space-6"></div>

            @Html.HiddenFor(model => model.IDDangNhap)

            <div class="form-group">
                @Html.LabelFor(model => model.IDNhanVien, "Tên nhân viên:", new { @class = "text-info" })
                <div class="col-sm-9">
                    <div class="span12">
                        @Html.DropDownList("IDNhanVien", String.Empty)
                    </div>
                    <div>
                        @Html.ValidationMessageFor(model => model.IDNhanVien)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="text-info">Tên đăng nhập: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.TenDangNhap)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="text-info">Mật khẩu: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.MatKhau, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.MatKhau)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="text-info">Quyền: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Quyen, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Quyen)
                    </div>
                </div>
            </div>
        </div>
    </div>            <!-- /modal-body -->
    <div class="modal-footer">

        <button type="submit" class="btn btn-success"> Lưu</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true"> Đóng</button>
    </div>
}

