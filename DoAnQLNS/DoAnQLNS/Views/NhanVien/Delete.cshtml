@model DoAnQLNS.Models.NhanVien
@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <h4 class="header red lighter bigger">
                <i class="icon-trash bigger-200"></i>
                Bạn có muốn xóa?
            </h4>

            <div class="space-6"></div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.HoTen, new { @class = "alert alert-error", @disabled = "disabled" })
            </div>
        </div>

    </div>            <!-- /modal-body -->
    <div class="modal-footer">
        <input class="btn btn-danger" type="submit" value="Có">
        <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true"> Đóng</button>
    </div>
}


