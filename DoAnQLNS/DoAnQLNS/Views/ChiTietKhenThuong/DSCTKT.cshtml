@model IEnumerable<DoAnQLNS.Models.ChiTietKhenThuong>

@{
    ViewBag.Title = "DSCTKT";
}


<div class="row-fluid">
    <div class="span12">
        <p>
            @Html.ActionLink("Tạo mới chi tiết khen thưởng", "Create")
        </p>

        <table id="sample-table-1" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Ngày Quyết Định</th>
                    <th>Nội Dung</th>
                    <th>Quyết Định Số</th>
                    <th>Mã Nhân Viên</th>
                    <th>Tên Khen Thưởng</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.NgayQuyetDinh
                        </td>
                        <td>
                            @item.NoiDung
                        </td>
                        <td>
                            @item.QuyetDinhSo
                        </td>
                        <td>
                            @item.HoDongLaoDong.IDNhanVien
                        </td>
                        <td>
                            @item.LoaiKhenThuong.TenKhenThuong
                </td>

                <td>
                    <div class="hidden-phone visible-desktop btn-group">
                        <button class="btn btn-mini btn-info">
                            <i class="icon-edit bigger-120">@Html.ActionLink("Sửa", "Edit", new { id = item.IDKhenThuong })</i>
                        </button>
                        <button class="btn btn-mini btn-danger">
                            <i class="icon-trash bigger-120">@Html.ActionLink("Xóa", "Delete", new { id = item.IDKhenThuong })</i>
                        </button>

                    </div>

                </td>
            </tr>
                }
            </tbody>
        </table>
    </div><!--/span-->
</div>
