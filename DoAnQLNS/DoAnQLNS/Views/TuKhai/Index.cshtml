@model IEnumerable<DoAnQLNS.Models.BangTuKhai>

@{
    ViewBag.Title = "Index";
}


<div class="row-fluid">
    <div class="span12">
        <p>
            @Html.ActionLink("Thêm mới", "Create")
        </p>
        <table id="sample-table-1" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>ID Tự Khai</th>
                    <th>ID Nhân Viên</th>
                    <th>Từ Ngày</th>
                    <th>Dến Ngày</th>
                    <th>Nội Dung</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.IDTuKhai
                        </td>
                        <td>
                            @item.IDNhanVien
                        </td>
                        <td>
                            @item.TuNgay
                        </td>
                        <td>
                            @item.DenNgay
                        </td>
                        <td>
                            @item.NoiDung
                        </td>
                        
                        <td>
                            <div class="hidden-phone visible-desktop btn-group">
                                <button class="btn btn-mini btn-info">
                                    <i class="icon-edit bigger-120">@Html.ActionLink("Sửa", "Edit", new { id = item.IDTuKhai })</i>
                                </button>
                                <button class="btn btn-mini btn-danger">
                                    <i class="icon-trash bigger-120">@Html.ActionLink("Xóa", "Delete", new { id = item.IDTuKhai })</i>
                                </button>

                            </div>
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.IDNhanVien }) |
                                @Html.ActionLink("Details", "Details", new { id = item.IDNhanVien }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.IDNhanVien })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div><!--/span-->
</div>
