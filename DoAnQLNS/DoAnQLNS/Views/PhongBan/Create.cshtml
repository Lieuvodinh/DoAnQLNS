@model DoAnQLNS.Models.PhongBan

@{
    ViewBag.Title = "Create";
}

<h2>THÊM MỚI PHÒNG BAN</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.TenPhongBan, "Tên Phòng Ban", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenPhongBan)
                @Html.ValidationMessageFor(model => model.TenPhongBan)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SDT, "Số Điện Thoại", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SDT)
                @Html.ValidationMessageFor(model => model.SDT)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, "Địa Chỉ email", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo mới" class="btn btn-default mybuttonSubmit" />
            </div>
        </div>
    </div>
}

<div class="col-md-offset-2 col-md-10">
    <button class="mybuttonBack">@Html.ActionLink("Trở về lại trang danh sách phòng ban", "DSPB")</button>
</div>
