@model IEnumerable<DoAnQLNS.Models.PhongBan>
@{
    ViewBag.Title = "DANH SÁCH PHÒNG BAN";
}

<div class="row-fluid">
    @using (Html.BeginForm("PhongBan", null, FormMethod.Get))
    {
        <div class="span12">
            <div class="row-fluid">
                <a class="btn btn-primary" style="margin-bottom:5px" data-modal="" href="/PhongBan/Create" id="btnCreate">Tạo mới</a>
            </div>
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Tên Phòng Ban</th>
                        <th>Số Điện Thoại</th>
                        <th>Email</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.TenPhongBan
                            </td>
                            <td>
                                @item.SDT
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                <div class="hidden-phone visible-desktop action-buttons">
                                    @Html.Raw("<a class='green'  data-modal='' href='/PhongBan/Edit/" + item.IDPhongBan + "' id='" + item.IDPhongBan + "' title='Sửa thông tin'><i class='icon-pencil bigger-130'></i> </a>")
                                    @Html.Raw("<a class='red'  data-modal='' href='/PhongBan/Delete/" + item.IDPhongBan + "' id='" + item.IDPhongBan + "' title='Xóa thông tin'><i class='icon-trash bigger-130'></i> </a>")


                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
@section scripts{
    @System.Web.Optimization.Scripts.Render("~/assets/js/phones.js")
}

<!-- modal placeholder-->
<div id='myModal' class='modal fade'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>

            </div>
        </div>
    </div>
</div>


