@model DoAnQLNS.Models.HoDongLaoDong
@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="form-horizontal">
            <h4 class="header green lighter bigger">
                <i class="icon-edit bigger-150"></i>
                Tạo mới hợp đồng
            </h4>
            @Html.ValidationSummary(true)
            <div class="space-6"></div>

            <div class="form-group">
                <label class="text-info">ID hợp đồng: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.IDHopDong, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.IDHopDong)
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IDLoaHopDong, "Tên hợp đồng", htmlAttributes: new { @class = "text-info" })
                <div class="col-md-9">
                    @Html.DropDownList("IDLoaHopDong", String.Empty)
                    @Html.ValidationMessageFor(model => model.IDLoaHopDong)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IDNhanVien, "Tên nhân viên", htmlAttributes: new { @class = "text-info" })
                <div class="col-md-9">
                    @Html.DropDownList("IDNhanVien", String.Empty)
                    @Html.ValidationMessageFor(model => model.IDNhanVien)
                </div>
            </div>
            <div class="form-group">
                <label class="text-info">Ngày ký: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.NgayKy, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.NgayKy)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="text-info">Ngày hiệu lực: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.NgayHieuLuc, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.NgayHieuLuc)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="text-info">Ngày hết hạn: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.NgayHetHan, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.NgayHetHan)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="text-info">Quyết định số: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.QuyetDinhSo, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.QuyetDinhSo)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="text-info">Nội dung tóm tắt: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.NoiDungTomTat, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.NoiDungTomTat)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="text-info">Tình trạng: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.TinhTrang, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.TinhTrang)
                    </div>
                </div>
            </div>
        </div>
    </div>            <!-- /modal-body -->
    <div class="modal-footer">
        <button type="submit" class="btn btn-success"> Lưu</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true"> Đóng</button>
    </div>
}
