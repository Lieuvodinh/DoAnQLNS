@model IEnumerable<DoAnQLNS.Models.HoDongLaoDong>
@{
    ViewBag.Title = "DANH SÁCH HỢP ĐỒNG LAO ĐỘNG";
}
<div class="row-fluid">
    @using (Html.BeginForm("HopDongLaoDong", null, FormMethod.Get))
    {
        <div class="span12">
            <div class="row-fluid">
                <a class="btn btn-primary" style="margin-bottom:5px" data-modal="" href="/HoDongLaoDongs/Create" id="btnCreate">Tạo mới</a>
            </div>
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ID hợp đồng</th>
                        <th>Tên hợp đồng</th>
                        <th>Tên nhân viên</th>
                        <th>Ngày ký</th>
                        <th>Ngày hiệu lực</th>
                        <th>Ngày hết hạn</th>
                        <th>Quyết định số</th>
                        <th>Nộ dung tóm tắt</th>
                        <th>Tình trạng</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IDHopDong)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LoaiHopDong.TenLoai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NhanVien.HoTen)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayKy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayHieuLuc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayHetHan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QuyetDinhSo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoiDungTomTat)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TinhTrang)
                            </td>
                            <td>
                                <div class="hidden-phone visible-desktop action-buttons">
                                    @Html.Raw("<a class='green'  data-modal='' href='/HoDongLaoDongs/Edit/" + item.IDHopDong + "' id='" + item.IDHopDong + "' title='Sửa thông tin'><i class='icon-pencil bigger-130'></i> </a>")
                                    @Html.Raw("<a class='red'  data-modal='' href='/HoDongLaoDongs/Delete/" + item.IDHopDong + "' id='" + item.IDHopDong + "' title='Xóa thông tin'><i class='icon-trash bigger-130'></i> </a>")

                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div><!--/span-->
    }
</div>
@section scripts{
    @System.Web.Optimization.Scripts.Render("~/assets/js/phones.js")
}
<!-- modal placeholder-->
<div id='myModal' class='modal fade'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
            </div>
        </div>
    </div>
</div>

