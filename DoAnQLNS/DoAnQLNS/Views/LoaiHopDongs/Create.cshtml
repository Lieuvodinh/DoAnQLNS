@model DoAnQLNS.Models.LoaiHopDong
@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="form-horizontal">
            <h4 class="header green lighter bigger">
                <i class="icon-edit bigger-150"></i>
                Thêm mới loại hợp đồng
            </h4>
            @Html.ValidationSummary(true)
            <div class="space-6"></div>
            
            <div class="form-group">
                <label class="text-info">Tên loại hợp đồng: </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.TenLoai, new { @class = "span12" })
                    <div>
                        @Html.ValidationMessageFor(m => m.TenLoai)
                    </div>
                </div>
            </div>

        </div>
    </div>            <!-- /modal-body -->
    <div class="modal-footer">
        <button type="submit" class="btn btn-success"> Lưu</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true"> Đóng</button>
    </div>
}
